*.pwn linguist-language=Pawn
*.inc linguist-language=Pawn

# Standardize line endings in files to avoid reading conflicts between Windows and Linux
* text=auto eol=lf

*.bat text eol=crlf
*.cmd text eol=crlf
*.pwn text eol=lf
*.inc text eol=lf
*.cfg text eol=lf
*.ini text eol=lf
*.js text eol=lf
*.json text eol=lf
*.md text eol=lf
*.sh text eol=lf
*.yaml text eol=lf
*.yml text eol=lf

*.ico binary
*.png binary

